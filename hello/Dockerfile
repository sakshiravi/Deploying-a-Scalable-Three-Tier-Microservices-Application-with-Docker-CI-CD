# Use the official Node.js image.
FROM node:14

# Set working directory.
WORKDIR /usr/src/app

# Install dependencies.
COPY package*.json ./
RUN npm install

# Copy application code.
COPY . .

# Build the application.
RUN npm run build

# Expose the port the app runs on.
EXPOSE 3000

# Command to run the application.
CMD ["npm", "start"]
